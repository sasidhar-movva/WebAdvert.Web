
@{
    ViewData["Title"] = "Confirm";
}

@model WebAdvert.Web.Models.Accounts.ConfirmEmailModel;

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Accounts" asp-action="Confirm">
            <h4> Create a new account</h4>
            <hr />

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailVerificationCode"></label>
                <input asp-for="EmailVerificationCode" class="form-control" />
                <span asp-validation-for="EmailVerificationCode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn">Confirm Email</button>
        </form>
    </div>
</div>
